# ============================================
# RANGE MARKET PARAMETERS
# ============================================
# Activation
RANGE_BUY_ENABLED=true
RANGE_SELL_ENABLED=true

# Offsets statiques (fallback)
# Ces valeurs sont utilisées si le calcul dynamique échoue
RANGE_BUY_OFFSET=-400
RANGE_SELL_OFFSET=400

# Calcul dynamique
# DYNAMIC_PERCENT: Pourcentage du range à utiliser
# Exemple: Range de 1000$ (94000-95000)
#   - DYNAMIC_PERCENT = 75% → Offset de ±375$
#   - Achète à 94625$, Vend à 95375$
RANGE_DYNAMIC_PERCENT=75

# Nombre de périodes pour calculer le range
RANGE_CALCULATION_PERIODS=20

# Pourcentage
RANGE_PERCENT=5

# Timing (en minutes)
RANGE_TIME_PAUSE=10
RANGE_AUTO_INTERVAL_NEW=180

